{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    /* Modules */
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}